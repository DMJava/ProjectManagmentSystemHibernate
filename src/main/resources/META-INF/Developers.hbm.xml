<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.ProjectManagmentSystem.pojo.Developers" table="developers">

        <id name="developer_id" type="java.lang.Integer">
            <column name="developer_id"/>
            <generator class="identity"/>
        </id>

        <property name="developer_name" type="java.lang.String">
            <column name="developer_name" length="45" not-null="true"/>
        </property>

        <property name="salary" type="java.lang.Integer">
            <column name="salary" length="11" not-null="true"/>
        </property>

        <many-to-one name="skills" class="com.ProjectManagmentSystem.pojo.Skills"
                     column="skill_id" not-null="true"
                     cascade="all"/>

        <set name="projects" table="Projects_has_developers"
        inverse="false" lazy="true" fetch="select" cascade="all">
            <key>
                <column name="developer_id" not-null="true"/>
            </key>
            <many-to-many entity-name="com.ProjectManagmentSystem.pojo.Projects">
                <column name="project_id" not-null="true"/>
            </many-to-many>
        </set>

    </class>
</hibernate-mapping>